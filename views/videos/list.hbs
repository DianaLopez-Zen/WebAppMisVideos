<!-- Masthead-->
<header class="Portada1">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-dark">
My videos</h2>
                        <hr color="gray" size=3 width="150">
        </div>
        <br> <br>
        <div class="row">
            {{#each data}}
            <div class="col-sm-4">
                <div class="container text-center my-auto">
                    <div>
                        <a style="text-decoration: none;" href="/detail/{{id}}">

                            <div>
                                <input value="{{id}}" class="video">

                                <iframe width="347" height="210" src="{{url}}" frameborder="0"
                                    allow="accelerometer; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen></iframe>
                            </div>

                            <h3 class="card-title text-dark">
                                {{name}}
                            </h3>
                        </a>
                        <h4 class="card-title text-dark">
                            {{red_name}}
                        </h4>
                        <p class="card-title text-dark">
                            {{category}}
                        </p>
                        <p class="m-2 text-dark">{{description}}</p>

                        

                        <!---***********************************************************-->
                        <a class="btn btn-danger" href="/videos/delete/{{id}}">
                            Delete Video
                        </a>
                        <a class="btn btn-secondary" href="/videos/update/{{id}}">
                            Edit
                        </a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="container text-center my-auto">
                    <p>There are not Videos saved yet.</p>
                     <a href="/videos/add">
                    <i id="desvanecer" class="fas fa-plus-circle fa-7x "></i>
            </a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
</header>
     {{>footer}} 

